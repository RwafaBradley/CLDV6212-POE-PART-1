@model IEnumerable<ABCRetailers.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<div class="d-flex justify-content-between mb-3">
    <h2>Products</h2>
    <a class="btn btn-primary" href="@Url.Action("Create")">Add New Product</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Product</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td style="width:100px">
                    <img src="@p.ImageUrl" alt="@p.ProductName" class="img-fluid" style="max-height:60px;" />
                </td>
                <td>@p.ProductName<br /><small class="text-muted">@p.Description</small></td>
                <td>@p.Price.ToString("C")</td>
                <td>
                    @if (p.StockAvailable <= 5)
                    {
                        <span class="badge bg-danger">@p.StockAvailable</span>
                    }
                    else if (p.StockAvailable <= 20)
                    {
                        <span class="badge bg-warning text-dark">@p.StockAvailable</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@p.StockAvailable</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = p.RowKey })">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@p.RowKey" style="display:inline" onsubmit="return confirm('Delete this product?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
