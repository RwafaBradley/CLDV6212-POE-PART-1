@model ABCRetailers.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}
<h2>Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="RowKey" />
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid mb-3" />
            <div class="mb-3">
                <label class="form-label">Replace Image</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>
        </div>
        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StockAvailable" class="form-label"></label>
                <input asp-for="StockAvailable" class="form-control" />
                <span asp-validation-for="StockAvailable" class="text-danger"></span>
            </div>

            <button class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
